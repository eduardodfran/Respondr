<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Emergency Type Buttons -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <Button
                android:id="@+id/policeBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="ðŸš“ Police"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <Button
                android:id="@+id/medicBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="ðŸš‘ Medical"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <Button
                android:id="@+id/fireBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="ðŸ”¥ Fire"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TonalButton" />

            <Button
                android:id="@+id/allBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="ðŸš¨ All Services"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.TonalButton" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Chat RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Quick Response Buttons (for follow-up questions) -->
    <HorizontalScrollView
        android:id="@+id/quickResponseScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone"
        android:background="#F5F5F5"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:id="@+id/quickResponseButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

    </HorizontalScrollView>

    <!-- Input Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <EditText
            android:id="@+id/input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Describe your emergency..."
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:minHeight="48dp"
            android:maxLines="3" />

        <ImageButton
            android:id="@+id/speakBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:contentDescription="Speak"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp" />

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Send"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
