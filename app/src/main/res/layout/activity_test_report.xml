<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§ª Test Firebase Report"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manually create a report to test Firebase connection"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Emergency Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/emergencyTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description / User Message"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/descriptionInput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="E.g., Car accident on Main Street, 2 people injured..."
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="24dp"/>

        <!-- AI Response -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Response / Assessment"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/aiResponseInput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="E.g., MEDICAL Emergency detected. Urgency: High. Call 911 immediately..."
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="32dp"/>

        <!-- Location Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Location: 14.5995Â° N, 120.9842Â° E (Mock)"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Test Report"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"/>

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Back to App"
            android:textSize="16sp"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
